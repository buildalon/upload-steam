{
  "name": "upload-steam",
  "version": "1.0.2",
  "description": "A GitHub Action for uploading an app build or workshop item to Steam.",
  "author": "buildalon",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildalon/upload-steam.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildalon/upload-steam/issues"
  },
  "homepage": "https://github.com/buildalon/upload-steam",
  "main": "dist/index.js",
  "keywords": [
    "steam",
    "upload",
    "build",
    "workshop"
  ],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "steam-totp": "^2.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.3.0",
    "@types/steam-totp": "^2.1.2",
    "@vercel/ncc": "^0.34.0",
    "shx": "^0.3.4",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "npm run clean && npm run bundle",
    "bundle": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "clean": "npm install && shx rm -rf dist/ out/ node_modules/ && npm ci"
  }
}
